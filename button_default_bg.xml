<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/othercolor1" />
            <stroke
                android:width="1dp"
                android:color="@color/othercolor2" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/othercolor1"
                android:endColor="@color/othercolor2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/othercolor2" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>