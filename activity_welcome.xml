<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#590101"
    android:orientation="vertical"
    tools:context=".welcome">
    <TextView android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_size"
        android:gravity="center_vertical|center_horizontal"
        />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/homeScroller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_marginTop="@dimen/height"
        android:layout_marginBottom="@dimen/bottom_button_height"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0dp">
            <ImageView
                android:background="@drawable/top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/image_height"
                android:layout_marginTop="0dp"/>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:id="@+id/audio"
                    android:layout_width="@dimen/button_height"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/cat_pic_audios" />
                <Button
                    android:id="@+id/info"
                    android:layout_width="@dimen/button_height"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="@dimen/space_left"
                    android:background="@drawable/cat_pic_info" />
                </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                >
                <TextView android:id="@+id/audiolabel"
                    android:layout_width="@dimen/heading_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="#590101"
                    android:textSize="@dimen/label_text"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Jain Bhajans"
                    />
                <TextView android:id="@+id/infolabel"
                    android:layout_width="@dimen/heading_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="#590101"
                    android:textSize="@dimen/label_text"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/heading_label_space"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Poojan Paath Pradeep - Jinvani"
                    />
            </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            >
            <Button
                android:id="@+id/puja"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/cat_pic_atishay" />
            <Button
                android:id="@+id/calender"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_marginLeft="@dimen/space_left"
                android:background="@drawable/cat_pic_cal" />
        </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                >
                <TextView android:id="@+id/pujalabel"
                    android:layout_width="@dimen/heading_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="#590101"
                    android:textSize="@dimen/label_text"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:text="Puja and Aarti"
                    />
                <TextView android:id="@+id/calenderlabel"
                    android:layout_width="@dimen/heading_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="#590101"
                    android:textSize="@dimen/label_text"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/heading_label_space"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="Jain Calendar"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                >
                <Button
                    android:id="@+id/siddha"
                    android:layout_width="@dimen/button_height"
                    android:layout_height="@dimen/button_height"
                    android:gravity="center"
                    android:background="@drawable/cat_pic_siddha" />
                <Button
                    android:id="@+id/video"
                    android:layout_width="@dimen/button_height"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="@dimen/space_left"
                    android:gravity="center"
                    android:background="@drawable/cat_pic_videos" />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                >
                <TextView android:id="@+id/siddhalabel"
                    android:layout_width="@dimen/heading_label_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#590101"
                    android:textStyle="bold"
                    android:textSize="@dimen/label_text"
                    android:gravity="center_horizontal"
                    android:text="Siddha - Kalyanak Atishay Kshetra"

                    />
                <TextView android:id="@+id/videolabel"
                    android:layout_width="@dimen/heading_label_width"
                    android:layout_height="wrap_content"
                    android:textColor="#590101"
                    android:textSize="@dimen/label_text"
                    android:layout_marginLeft="@dimen/heading_label_space"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:text="Jain Videos"
                    />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/missleneous"
                    android:layout_width="@dimen/button_height"
                    android:layout_height="@dimen/button_height"
                    android:gravity="center"
                    android:background="@drawable/bhajan_photo" />

            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                >
                <TextView android:id="@+id/missleneouslabel"
                    android:layout_width="@dimen/heading_label_width"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#590101"
                    android:textSize="@dimen/label_text"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:text="Dev Darshan Bhav Vandana "
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/updateScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:layout_marginTop="@dimen/height"
        android:layout_marginBottom="@dimen/bottom_button_height"
        android:visibility="invisible">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">
            <ImageView
                android:background="@drawable/top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"/>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/space_top"
                >
            <TextView
                android:id="@+id/update_txt"
                android:layout_marginTop="@dimen/space_top"
                android:layout_width="@dimen/text_view_width"
                android:layout_height="wrap_content"
                android:textSize="@dimen/label_text"
                android:textColor="#590101"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text = "We need to update the latest bhajans,videos and data (approx 4.5 MBs).\n \nThis will require an internet connection and may take a minute or two."
                />
            </LinearLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/button_margin_top"
                android:layout_centerHorizontal="true">
                <Button
                    android:id="@+id/no_btn"
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/yes_button_height"
                    android:background="@drawable/roundcorner"
                    android:textSize="@dimen/second_label_text"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/ok_btn"
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/yes_button_height"
                    android:background="@drawable/roundcorner"
                    android:textSize="@dimen/second_label_text"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"/>
                <Button
                    android:id="@+id/yes_btn"
                    android:layout_width="@dimen/bottom_button_width"
                    android:layout_height="@dimen/yes_button_height"
                    android:background="@drawable/roundcorner"
                    android:textSize="@dimen/second_label_text"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            </LinearLayout>

    </ScrollView>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webScroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:layout_marginTop="@dimen/height"
        android:layout_marginBottom="@dimen/bottom_button_height"
        android:visibility="invisible">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/webView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>
    </ScrollView>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/aboutusScroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:layout_marginTop="@dimen/height"
        android:layout_marginBottom="@dimen/bottom_button_height"
        android:visibility="invisible">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="0dp">
            <ImageView
                android:background="@drawable/top"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/image_height"
                />
            <ImageView
                android:src="@drawable/jainpuja"
                android:layout_width="@dimen/button_height"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_top"/>
            <TextView android:id="@+id/hindilabel1"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textSize="@dimen/first_label_text"
                android:text="जैन पूजा"
                android:textStyle="bold"
                android:layout_gravity ="center"
                android:layout_marginTop="@dimen/space_top"
                />
            <TextView android:id="@+id/hindilabel2"
                android:paddingTop="@dimen/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textSize="@dimen/first_label_text"
                android:text="Jain Puja"
                android:textStyle="bold"
                android:layout_gravity ="center"
                />
            <TextView android:id="@+id/hindilabelsite"
                android:paddingTop="@dimen/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/second_label_text"
                android:text="www.jainpuja.com"
                android:layout_gravity ="center"
                />
            <ImageView
                android:src="@drawable/dvider_1"
                android:paddingTop="@dimen/space_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>


            <TextView android:id="@+id/hindilabel3"
                android:paddingTop="@dimen/space_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/third_label_text"
                android:text="Presented By:"
                android:layout_gravity ="center"
                />
            <TextView android:id="@+id/hindilabel4"
                android:paddingTop="@dimen/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textSize="@dimen/first_label_text"
                android:text="Sandeep Jain"
                android:textStyle="bold"
                android:layout_gravity ="center"
            />
            <TextView android:id="@+id/hindilabel5"
                android:paddingTop="@dimen/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/second_label_text"
                android:text="jainsfca@gmail.com"
                android:layout_gravity ="center"
            />
            <ImageView
                android:paddingTop="@dimen/space_top"
                android:src="@drawable/dvider_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>


            <TextView android:id="@+id/hindilabel6"
                android:paddingTop="@dimen/space_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/third_label_text"
                android:text="Powered By:"
                android:layout_gravity ="center"
            />
            <TextView android:id="@+id/hindilabel7"
                android:paddingTop="@dimen/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/first_label_text"
                android:text="ekant solutions"
                android:layout_gravity ="center"
            />
            <TextView android:id="@+id/hindilabel8"
                android:paddingTop="@dimen/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/second_label_text"
                android:text="www.ekant.com"
                android:layout_gravity ="center"
            />
            <TextView android:id="@+id/hindilabel"
                android:paddingTop="@dimen/space_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/second_label_text"
                android:text="ideas@ekant.com"
                android:layout_gravity ="center"
            />

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <TextView android:id="@+id/hindilabel9"
                android:paddingTop="@dimen/space_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/third_label_text"
                android:text="(c) 2015 Jain Puja www.jainpuja.com"
                android:layout_centerInParent="true"
                />
            <TextView android:id="@+id/hindilabel10"
                android:paddingTop="@dimen/space_top"
                android:layout_marginRight="@dimen/cell_space_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#590101"
                android:textStyle="bold"
                android:textSize="@dimen/second_label_text"
                android:text=""
               android:layout_alignParentRight="true"
                />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/linearLayout2">
        <Button
            android:id="@+id/home"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:paddingBottom="5dp"
            android:background="@drawable/icon_home" />
        <Button
            android:id="@+id/update"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/icon_refresh" />
        <Button
            android:id="@+id/facebook"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/icon_fb" />
        <Button
            android:id="@+id/about_us"
            android:layout_width="@dimen/bottom_button_width"
            android:layout_height="@dimen/bottom_button_height"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/about_us" />
    </LinearLayout>
</RelativeLayout>


